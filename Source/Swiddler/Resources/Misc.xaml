<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:e="clr-namespace:Swiddler.MarkupExtensions"
                    >

    <StreamGeometry x:Key="Swiddler.Geometry.Cross">
        M12.7,3.3l-9.4,9.4 M3.3,3.3l9.4,9.4
    </StreamGeometry>

    <Path x:Key="Swiddler.Glyph.Cross" 
        StrokeThickness="{e:OneByDpiScale}"
        Stroke="{Binding (TextElement.Foreground), RelativeSource={RelativeSource Self}}" 
        Height="16" Width="16" Data="{StaticResource Swiddler.Geometry.Cross}" />

</ResourceDictionary>
